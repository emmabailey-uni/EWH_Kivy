<MainMenuRecipient>:

    GridLayout:
        cols: 1

        Label:
            text: "Main Menu"
            font_size: 40
            multiline: True
            italic: True
            color: 1, 0, 1, 1

        Button:
            id: btn_profile
            text: "Edit Profile"
            background_color: [1, 0, 1, .6]
            on_release:
                app.change_screen("profile_window","left")
                app.previous="main_menu_recipient"

        Button:
            id: btn_request
            text: "Request Donation"
            background_color: [1, 0, 1, .6]
            on_release:
                app.change_screen("request_donation","left")
                app.previous="main_menu_recipient"

        Button:
            id: btn_request
            text: "View Available Equipment"
            background_color: [1, 0, 1, .6]
            on_release:
                app.change_screen("available_equipment","left")
                app.previous="main_menu_recipient"

        Button:
            id: btn_rfid
            text: "Scan RFID"
            background_color: [1, 0, 1, .6]
            on_release:
                app.change_screen("scanRFID_window","left")
                app.previous="main_menu_recipient"
                
    Button:
        text: "Back"
        font_size: 15
        background_color: [1, 0, 1, .6]
        pos_hint: {"x":0.0, "top":1.0}
        size_hint: 0.1,0.1
        on_release:
            app.change_screen(app.previous,"left")
            app.previous="main_menu_recipient"
