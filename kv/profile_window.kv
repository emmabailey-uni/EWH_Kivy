        pos_hint: {"x": 0.0, "bottom":1}
        size_hint: 1,0.125
        italic: True
        on_press: root.btn()
        on_release:
            app.root.current = "second"
            app.change_screen(app.path,"right")
            app.previous="profile_window"
            
    Button:
        text: "Back"
        font_size: 15
        background_color: [1, 0, 1, .6]
        pos_hint: {"x":0.0, "top":1.0}
        size_hint: 0.1,0.1
        on_release:
            app.change_screen(app.previous,"right")
            app.previous="profile_window"
