<MainMenuDonor>:

    GridLayout:
        cols: 1

        Label:
            text: "Main Menu"
            font_size: 40
            multiline: True
            italic: True
            color: 1, 0, 1, 1

        Button:
            id: btn_profile
            text: "Edit Profile"
            background_color: [1, 0, 1, .6]
            on_release:
                app.change_screen("profile_window","left")
        Button:
            id: btn_donate
            text: "Donate"
            background_color: [1, 0, 1, .6]
            on_release:
                app.change_screen("new_donation","left")

        Button:
            id: btn_view_equipment
            text: "Your Donated Machines"
            background_color: [1, 0, 1, .6]
            on_release:
                app.change_screen("view_donations","left")
