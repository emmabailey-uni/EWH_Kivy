<MainWindow>:

    id_no:id_no
    passw:passw

    GridLayout:
        cols:1

        Label:
            text: "Log in"
            font_size: 70
            italic: True
            color: 1, 0, 1, 1

        GridLayout:
            cols:2

            Label:
                text: "Hopital ID: "
                color: 1, 0, 1, 1
                canvas.before:
                    Color:
                        rgba: .5, .5, .5, 1
                    Line:
                        width: 0.5
                        rectangle: self.x, self.y, self.width, self.height

            TextInput:
                id: id_no
                multiline: False

            Label:
                text: "Hospital Password: "
                color: 1, 0, 1, 1
                canvas.before:
                    Color:
                        rgba: .5, .5, .5, 1
                    Line:
                        width: 0.5
                        rectangle: self.x, self.y, self.width, self.height

            TextInput:
                id: passw
                multiline: False


        Button:
            text: "Submit"
            background_color: [1, 0, 1, 0.55]
            # Moving to next window when button is triggered - need to use NAME
            on_release:
                root.btn()
                #app.root.current = "second"
                # Only let them through if correct username and psw submitted
