<AvailableEquipment>

    Label:
        text: "Available Equipment"
        font_size: 40
        pos_hint:{"x":0,"top":1}
        size_hint: 1,0.2
        color: 1, 0, 1, 1

    Button:
        id:defibrillator
        text: "Defibrillator"
        background_color: [1, 0, 1, .6]
        pos_hint: {"x": 0.0, "top":0.75}
        size_hint: 1, 0.2
        on_release:
            root.updateCategory('defibrillator')
            app.change_screen('defibrillator_list','left')


    Button:
        id:ecg_machine
        text: "ECG Machine"
        background_color: [1, 0, 1, .6]
        pos_hint: {"x": 0.0, "top":0.5}
        size_hint: 1, 0.2
        on_release:
            root.updateCategory('ecg_machine')
            app.change_screen('ecg_machine_list','left')


    Button:
        id:steriliser
        text: "Sterilizer"
        background_color: [1, 0, 1, .6]
        pos_hint: {"x": 0.0, "top":0.25}
        size_hint: 1, 0.2
        on_release:
            root.updateCategory('steriliser')
            app.change_screen('steriliser_list','left')
            
    Button:
        text: "Back"
        font_size: 15
        background_color: [1, 0, 1, .6]
        pos_hint: {"x":0.0, "top":1.0}
        size_hint: 0.1,0.1
        on_release:
            app.change_screen(app.previous,"left")
