<ScanRFIDWindow>:
    background_color: [0,0,0,0]

    Button:
        id: btn_scan
        text: "Scan RFID Tag"
        background_color: [204/255, 0, 204/255, 0.6]
        pos_hint: {"x": 0.05, "top":0.8}
        size_hint: 0.9, 0.2
        on_release:
            app.change_screen(app.path,"left")
            
    Button:
        id: btn_override
        text: "Enter Serial Number"
        background_color: [204/255, 0, 204/255, 0.6]
        pos_hint: {"x": 0.05, "top":0.4}
        size_hint: 0.9, 0.2
        on_release:
            app.change_screen("manual_override","left")
            
    Label:
        text: "or"
        font_size: 20
        pos_hint:{"x":0.05,"top":0.6}
        size_hint:0.9,0.2
        multiline: False
        italic: True
        color: 1, 0, 1, 1
