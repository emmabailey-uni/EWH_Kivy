#:kivy 1.10.0


<SelectableButton1>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (1, 1, 1, 0)
        Rectangle:
            pos: self.pos
            size: self.size
    on_release:
        root.updateBtn(self.id)
        app.change_screen("equipment_info","left")


<AvailableList>:

    available_rv:available_rv

    BoxLayout:
        orientation: "vertical"
        Label:
            text:'Available Machines'
            font_size: 40
            pos_hint:{"x":0,"top":0}
            size_hint: 1,0.1
            color: 1, 0, 1, 1

        AvailableRV:
            id: available_rv
            rv_layout: layout
            viewclass:'SelectableButton1'
            SelectableRecycleBoxLayout:
                id: layout
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: "vertical"

        Button:
            text: 'Previous screen'
            size_hint: 1, None
            size: 150, 100
            background_color: [1, 0, 1, .6]
            on_release:
                app.change_screen("available_equipment","right")

